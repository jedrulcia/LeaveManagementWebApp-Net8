@model IEnumerable<LeaveManagementWebApp.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus">&nbsp;</i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square">&nbsp;</i>Edit</a> &nbsp;
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info">&nbsp;</i>Details</a> &nbsp;
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"><i class="fa-solid fa-trash">&nbsp;</i>Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>

<form id="deleteFrom" asp-action="Delete">
    <input type="hidden" id="leaveTypeId" name="Id" />
</form>

@section Scripts
{
    <script>
        $(function() 
        {
            $('.table').DataTable();

            $('.deleteBtn').click(function(e) 
            {
                swal(
                {
                    title: "Are you sure?",
                    text: "Are you sure you want to delte this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }
                ).then((confirm) => 
                    { 
                        if(confirm)
                        {
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#leaveTypeId').val(id);
                            $('#deleteFrom').submit();
                        }
                    }
                );
            });
        });
    </script>
}
